{
  "manifest_version": 2,
  "name": "Verbo",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "*://*.youtube.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  }
}